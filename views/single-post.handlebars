<article class="blog">
  <div class="blog-title">
    <p>{{blog.title}}
      <span>Posted by: {{blog.user_id}} on {{blog.created_at}}</span>
    </p>
  </div>
  <div class="blog-body">
    <p>{{blog.body}}</p>
  </div>
  
  {{#if loggedIn}}
  <form class="comment-form">
    <div class ="comment-body">
      <textarea name="comment-form" class="contact-form-body"></textarea>
    </div>
    <div class ="submit">
      <button type="submit">Submit</button>
    </div>
  </form>
  {{/if}}

  <div class="comments">
  {{#each blog.comments as |comment|}}
  <section class="comment">
    <div class="comment-title">
      <span>{{user.username}} on {{comment.created_at}}</span>
    </div>
    <div class="comment-body">
      {{comment.body}}
    </div>
  </section>
  {{/each}}
</div>

</article>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}